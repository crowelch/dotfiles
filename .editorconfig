root = true

[**.js]
path = ~/.vim/bundle/js-beautify/js/lib/beautify.js
bin = node
indent_style = tabs
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[**.css]
path = ~/.vim/bundle/js-beautify/js/lib/beautify-css.js
indent_style = tabs
indent_size = 4

[**.html]
path = ~/.vim/bundle/js-beautify/js/lib/beautify-html.js
max_char = 80
brace_style = expand
indent_style = tabs
indent_size = 4
